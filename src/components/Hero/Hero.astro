import  Character  from './Character.astro';
---

  <div class="relative">
    <main class="lg:relative">
      <div class="mx-auto w-11/12 max-w-[90rem] items-center justify-between pt-16 pb-40 font-author lg:flex lg:h-screen lg:pb-0">
      <section class="mt-30 max-w-xl mx-auto lg:mt-0 lg:max-w-lg lg:ml-0">
        <h1 class="flex flex-col text-4xl font-bold tracking-tight text-white sm:text-5xl md:text-6xl lg:text-5xl xl:text-6xl">
          <span class="block xl:inline text-center lg:text-left">Hi! i'm Fran</span>
          <span class="block text-[#8645ff] text-center lg:text-left xl:inline">Front-end Developer</span>
        </h1>
        <p class="mx-auto mt-3 max-w-md text-lg text-gray-500 text-center sm:text-xl  md:mt-5 md:max-w-3xl lg:text-left">
        I'm a web developer based in Argentina, currently working full-time as a front-end developer and studying Computer Science at Universidad Nacional Del Comahue.
        </p>
        <div class="flex flex-col items-center justify-center lg:items-start">
            <a class="flex items-center justify-center text-2xl text-[#8645ff] font-semibold py-4 px-8 mt-[3%] bg-transparent border border-[#8645ff] w-fit mx-auto lg:ml-0" href="mailto:francoperdomo6@gmail.com">
